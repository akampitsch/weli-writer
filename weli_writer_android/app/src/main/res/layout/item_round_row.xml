<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/numberTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Nr."
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/numberDivider"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/numberDivider"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toStartOf="@+id/roundRow0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/numberTv"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/roundRow0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="21"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/roundRowDivider0"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/numberDivider" />

    <View
        android:id="@+id/roundRowDivider0"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toStartOf="@+id/roundRow1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/roundRow0"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/roundRow1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="22"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/roundRowDivider1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/roundRowDivider0" />

    <View
        android:id="@+id/roundRowDivider1"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toStartOf="@+id/roundRow2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/roundRow1"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/roundRow2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="23"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/roundRowDivider2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/roundRowDivider1" />

    <View
        android:id="@+id/roundRowDivider2"
        android:layout_width="1dp"
        android:layout_height="35dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toStartOf="@+id/roundRow3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/roundRow2"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/roundRow3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="24"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/roundRowDivider2" />


</androidx.constraintlayout.widget.ConstraintLayout>
